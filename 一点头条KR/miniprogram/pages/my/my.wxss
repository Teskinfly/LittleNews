#head {
  background-color: #328EE8;
  height: 350rpx;
  color: white;
}
#head .login {
  padding-left: 250rpx;
  padding-top: 160rpx;
  width: 250rpx;
}
#head .login image {
  width: 200rpx;
  height: 100rpx;
}
#head .infoShow {
  padding-left: 280rpx;
}
#head .infoShow .myImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
#head .name {
  width: 100%;
  text-align: center;
}
#head .weather {
  text-align: center;
}
#head .weather .region {
  color: green;
}
#view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20rpx;
}
#view image {
  padding-top: 20rpx;
  width: 150rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
#view text {
  font-size: 40rpx;
}
