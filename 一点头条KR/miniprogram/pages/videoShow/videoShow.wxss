.container .select {
  width: 60vh;
  height: 100rpx;
  display: flex;
}
.container .select .item {
  flex-direction: column;
  font-size: 20pt;
  flex-wrap: nowrap;
  word-break: keep-all;
  padding: 15rpx;
}
.container .select .active {
  border-bottom: 5rpx solid currentColor;
  color: #328EE8;
}
.container .videoplay .title {
  width: 100%;
  font-size: 20pt;
  text-align: center;
}
.container .videoplay .myvideo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.container .videoplay .myvideo video {
  width: 100%;
}
